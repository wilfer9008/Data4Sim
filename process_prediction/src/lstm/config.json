    "epochs": 100,
    "lr": 0.001,
    "weight_decay": 0.00001,
    "grad_clip": 1.0,
    "device": "cuda",
    "out_dir": "runs/lstm_process_mining"
  },

  "model": {
    "emb_dim": 64,
    "hidden_dim": 256,
    "layers": 3,
    "dropout": 0.0
  }
}
